<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.extra.dice.MenuActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Menu"
        android:id="@+id/textViewMenuActivity"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sound"
        android:id="@+id/switchSound"
        android:checked="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/b_play1"
        android:src="@drawable/play"
        android:scaleType="fitCenter"
        android:background="#00ffffff"
        android:layout_below="@+id/textViewMenuActivity"
        android:layout_alignStart="@+id/b_instruct1" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/b_instruct1"
        android:src="@drawable/instructions"
        android:scaleType="fitCenter"
        android:background="#00ffffff"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/switchSound" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/b_level"
        android:src="@drawable/levelselect"
        android:scaleType="fitCenter"
        android:background="#00ffffff"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/b_instruct1"
        android:layout_below="@+id/b_play1" />

</RelativeLayout>
